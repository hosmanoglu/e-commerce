{
    "compilerOptions": {
      "target": "ES2023",
      "module": "commonjs",
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
    },
    "ts-node": {
    "transpileOnly": true,
    "files": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules","./coverage", "./dist", "__tests__", "jest.config.js"]
  }
  